@model IEnumerable<Warzywniak.OrderEntity>
@{
    ViewBag.Title = "ShowAllOrders";
}
<h2>ShowAllOrders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <strong> @Html.DisplayFor(modelItem => item.OrderId)</strong>
            </td>
            <td>
                <strong>  @Html.DisplayFor(modelItem => item.OrderDate)</strong>
            </td>
            <td></td>
            <td></td>
            <td></td>

        </tr>

        <td>
            Product Name
        </td>
        <td>
            Quantity
        </td>
        <td>
            Product Unit
        </td>
        <td>
            Vat
        </td>
        <td>
            Product Price
        </td>
        foreach (var product in item.products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductUnit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Vat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductPrice)
                </td>

            </tr>

        }

            <tr>
                <td>
                Full Order value: 
                </td>
                <td>
                    <strong> @Html.DisplayFor(modelItem => item.fullPrice)</strong>
                </td>
            </tr>

    }
</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
