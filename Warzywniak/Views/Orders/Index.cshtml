@model IEnumerable<Warzywniak.Order>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") | 
    @Html.ActionLink("Sale summary", "SaleSummary")
</p>

<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.OrdareDate)*@
            @Html.ActionLink("Order date", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.User.Nick)*@
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Realized)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrdareDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Nick)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.PhoneNumber)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Realized)*@
            @Html.DisplayTextFor(modelItem => item.Realized)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |
            @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }) |
	        @Html.ActionLink("AddProducts", "AddProducts", new { id = item.OrderId })

        </td>
    </tr>
    }

</table>
