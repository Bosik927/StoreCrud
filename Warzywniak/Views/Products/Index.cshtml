@model IEnumerable<Warzywniak.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") | 
    @Html.ActionLink("Best selling product", "BestSellingProduct", new { amount = 10 })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vat)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.ForDelete.Value == true) { continue; }
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vat)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductId }) | 
	        @Html.ActionLink("AddProducts", "AddProducts", new { id=item.ProductId })

        </td>
    </tr>
}

</table>
